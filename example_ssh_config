# sample ssh config. Should go in ~/.ssh/

Host myserver
    HostName 192.168.1.2
    User sam

# "Keywords are case-insensitive and arguments are case-sensitive" (man ssh_config)
host myserver
    hostname 192.168.1.2
    user sam

# if you want to go through an intermediate node, use proxyjump
host somerelay
    # ...
host somedestination
    proxyjump somerelay
    hostname 192.168.123.456
