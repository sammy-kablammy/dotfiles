[credential "https://github.com"]
    helper = !/usr/bin/gh auth git-credential
[user]
    email = 98327570+sammy-kablammy@users.noreply.github.com
    name = sammy-kablammy
[core]
    editor = nvim
[init]
    defaultBranch = main
[pull]
    rebase = false
[diff]
    tool = nvimdiff
[difftool]
    prompt = false
[merge]
    tool = nvimdiff
[commit]
    verbose = true
[url "https://github.com/"]
    insteadOf = gh:
[alias]
    l = "log --all --graph --decorate --oneline -10"
    st = "status"
    s = "status --short --branch"
    f = "fetch"
    fq = "fetch --quiet"
    fst = "!f() { git fetch && git status; }; f"
    fs = "!f() { git fetch && git status --short --branch; }; f"
    dt = "difftool"
    dts = "difftool --staged"
    mt = "mergetool"
    b = "branch -vv"
    alias = "!f() { git config --list | grep 'alias'; }; f"
    untrack = "rm --cached" # remove file from repo without deleting from filesystem
    co = "checkout"
    w = "worktree"
    ds = "diff --stat"
    ls = "ls-files"
